pipeline {
    agent {
        node {
            label 'nodejs-agent'
        }
    }

    environment {
        BUILD_DIR = 'dist'
        OUTPUT_DIR = '/home/nestjs-app'
    }

    stages {

        stage('Install Dependencies') {
            steps {
                sh 'pnpm install'
            }
        }

        stage('Build') {
            steps {
                sh 'pnpm run build'
            }
        }

        stage('Deploy Apps') {
            steps {
                script {
                    sh 'mkdir -p /home/nestjs-app'
                    sh "cp -r ${BUILD_DIR}/* /home/nestjs-app/"
                }
            }
        }
    }

    post {
        success {
            echo 'App deployed successfully!'
        }
        failure {
            echo 'Build or copy failed.'
        }
    }
}