pipeline {
    agent {
        node {
            label 'nodejs-agent'
        }
    }

    environment {
        BUILD_DIR = 'dist'
        OUTPUT_DIR = '/home/nestjs-app'
    }

    stages {

        stage('Install Dependencies') {
            steps {
                sh 'pnpm install'
            }
        }

        stage('Build') {
            steps {
                sh 'pnpm run build'
            }
        }

        stage('Deploy Apps') {
            steps {
                script {
                    sh 'mkdir -p ${OUTPUT_DIR}/'
                    sh "cp -r ${BUILD_DIR}/* ${OUTPUT_DIR}/"
                    sh "cp package.json ${OUTPUT_DIR}/"
                    sh "cp -r ecosystem.config.js ${OUTPUT_DIR}/"
                    sh "pnpm install --production --prefix ${OUTPUT_DIR}/"
                    sh "pm2 start ${OUTPUT_DIR}'/ecosystem.config.js --env production"
                    sh "pm2 save"
                }
            }
        }
    }

    post {
        success {
            echo 'App deployed successfully!'
        }
        failure {
            echo 'Build or copy failed.'
        }
    }
}