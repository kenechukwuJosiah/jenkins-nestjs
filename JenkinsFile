pipeline {
    agent {
        node {
            label 'nodejs-agent'
        }
    }

    environment {
        BUILD_DIR = 'dist'
        APP_NAME = 'nestjs-app'
        OUTPUT_DIR = '/root/nestjs-jenkins'
    }

    stages {

        stage('Install Dependencies') {
            steps {
                sh 'pnpm install'
            }
        }

        stage('Build') {
            steps {
                sh 'pnpm run build'
            }
        }

        stage('Copy Files') {
            steps {
                script {
                    mkdir -p "${OUTPUT_DIR}"
                    sh "cp -r ${BUILD_DIR}/* ${OUTPUT_DIR}/"
                }
            }
        }
    }

    post {
        success {
            echo 'App deployed successfully!'
        }
        failure {
            echo 'Build or copy failed.'
        }
    }
}